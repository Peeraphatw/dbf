~PAYCOND:       0,      "",                 "A->PAYCOND",       "",E
~SLMCOD:        0,      "",                 "A->SLMCOD",        ""
~AREA:          0,      "",                 "A->AREACOD",       ""
~TRM:           0,      "",                 "A->PAYTRM",        "",D
~PRI:           0,      "",                 "A->TABPR",         "",E
~DISC:          0,      "",                 "A->DISC",          "",F
~CRLINE:        0,      "99,999,999.99",    "A->CRLINE",        "",G
~ACCNUM:        0,      "",                 "A->ACCNUM",        "",F
~DLVBY:         0,      "",                 "A->DLVBY",         "",G
~REMARK_NB:     0,      "",                 "has_remark",       "has_remark=IIF(A->REMARK='          ',':',' ')"
