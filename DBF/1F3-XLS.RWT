~HREM1:         0,      "",                 "x1",               "x1=@p_hrem( A->CUSCOD,1 )"
~HREM2:         0,      "",                 "x2",               "x2=@p_hrem( A->CUSCOD,2 )"
~HREM3:         0,      "",                 "x3",               "x3=@p_hrem( A->CUSCOD,3 )"
~HREM4:         0,      "",                 "x4",               "x4=@p_hrem( A->CUSCOD,4 )"
